{
  "name": "@examples/minimal-app",
  "private": true,
  "version": "0.0.0",
  "description": "Isolated minimal host app for @costscope/backstage-plugin E2E & sandbox (no full Backstage deps)",
  "dependencies": {
    "@backstage/core-app-api": "^1.14.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.23.1",
    "@tanstack/react-query": "^5.56.2",
    "@mui/material": "5.15.14",
    "@mui/utils": "5.15.14",
    "recharts": "2.7.2",
    "@backstage/core-plugin-api": "^1.10.9",
    "@backstage/version-bridge": "^1.0.7",
    "@costscope/backstage-plugin": "0.1.1"
  },
  "devDependencies": {
    "vite": "5.4.8",
    "@vitejs/plugin-react": "4.3.1"
  },
  "scripts": {
    "start": "vite --port 3000",
    "build": "vite build --base=/costscope-backstage-plugin/minimal/ && node ./scripts/postbuild-pages.mjs",
    "build:demo": "VITE_DEMO_MODE=mock vite build --base=/costscope-backstage-plugin/minimal/ && node ./scripts/postbuild-pages.mjs",
    "preview": "vite preview --base=/costscope-backstage-plugin/minimal/ --port 5174 --strictPort --open",
    "preview:host": "vite preview --base=/costscope-backstage-plugin/minimal/ --port 5174 --strictPort --host",
    "verify:preview": "node ./scripts/verify-preview.mjs"
  }
}
