{
	"openapi": "3.1.0",
	"info": {"title": "FinOps Insights API (Sample Spec)","version": "0.0.1","description": "Minimal subset of the FinOps Insights (Costscope) API used by the frontend plugin. Replace / extend with the real backend spec when available."},
	"paths": {"/providers": {"get": {"summary": "List cloud providers ingested","responses": {"200": {"description": "OK","content": {"application/json": {"schema": {"type": "array","items": {"$ref": "#/components/schemas/Provider"}}}}}}}},"/datasets": {"get": {"summary": "Datasets / billing export windows per provider","parameters": [{"name": "project","in": "query","schema": {"type": "string"}}],"responses": {"200": {"description": "OK","content": {"application/json": {"schema": {"type": "array","items": {"$ref": "#/components/schemas/Dataset"}}}}}}}},"/costs/summary": {"get": {"summary": "Aggregated cost summary for period including delta to previous period","parameters": [{"name": "period","in": "query","schema": {"type": "string","example": "P30D"}},{"name": "project","in": "query","schema": {"type": "string"}}],"responses": {"200": {"description": "OK","content": {"application/json": {"schema": {"$ref": "#/components/schemas/CostSummary"}}}}}}},"/costs/daily": {"get": {"summary": "Daily aggregated costs","parameters": [{"name": "period","in": "query","required": false,"schema": {"type": "string","example": "P30D"}}],"responses": {"200": {"description": "OK","content": {"application/json": {"schema": {"type": "array","items": {"$ref": "#/components/schemas/OverviewItem"}}}}}}}},"/breakdown": {"get": {"summary": "Cost breakdown by dimension","parameters": [{"name": "by","in": "query","schema": {"type": "string","example": "ServiceCategory"}},{"name": "period","in": "query","schema": {"type": "string","example": "P30D"}}],"responses": {"200": {"description": "OK","content": {"application/json": {"schema": {"type": "array","items": {"$ref": "#/components/schemas/BreakdownRow"}}}}}}}},"/alerts": {"get": {"summary": "Actionable cost alerts / recommendations","responses": {"200": {"description": "OK","content": {"application/json": {"schema": {"type": "array","items": {"$ref": "#/components/schemas/ActionItem"}}}}}}}}},
	"components": {"schemas": {"Provider": {"type": "object","required": ["id","displayName","status"],"properties": {"id": {"type": "string"},"displayName": {"type": "string"},"status": {"type": "string"},"services": {"type": "integer"},"lastUpdated": {"type": "string","format": "date-time"}}},"Dataset": {"type": "object","required": ["id","provider","project","status","records","periodStart","periodEnd"],"properties": {"id": {"type": "string"},"provider": {"type": "string"},"project": {"type": "string"},"status": {"type": "string"},"records": {"type": "integer"},"periodStart": {"type": "string","format": "date"},"periodEnd": {"type": "string","format": "date"},"lastIngestedAt": {"type": "string","format": "date-time"}}},"CostSummary": {"type": "object","required": ["period","project","totalCost","previousTotalCost","deltaPct","currency"],"properties": {"period": {"type": "string"},"project": {"type": "string"},"totalCost": {"type": "number"},"previousTotalCost": {"type": "number"},"deltaPct": {"type": "number"},"currency": {"type": "string"}}},"OverviewItem": {"type": "object","required": ["date","cost"],"properties": {"date": {"type": "string","format": "date"},"cost": {"type": "number"}}},"BreakdownRow": {"type": "object","required": ["dim","cost","deltaPct"],"properties": {"dim": {"type": "string"},"cost": {"type": "number"},"deltaPct": {"type": "number","description": "Fractional change vs previous comparable period"}}},"ActionItem": {"type": "object","required": ["id","severity","message"],"properties": {"id": {"type": "string"},"severity": {"type": "string","enum": ["info","warn","critical"]},"message": {"type": "string"}}}}}
}
